{
  "kind": "collectionType",
  "collectionName": "locations",
  "info": {
    "name": "Location"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "postal_code": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "longitude": {
      "type": "float"
    },
    "latitude": {
      "type": "float"
    },
    "country": {
      "type": "enumeration",
      "enum": [
        "CA"
      ],
      "default": "CA"
    }
  }
}
